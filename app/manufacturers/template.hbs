<div class="section">
  <div class="container is-fluid">
      <figure class="media media-content">
        <div class="message">
      <div class="message-header">Manufacturers</div>
    </div>
      <div class="message-body">
    <table class="table">
        <thead>
          <tr>
            <th>Manufacturer</th>
            <th>Country</th>
            <th>Number of Models</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
            {{#each model as |brand|}}
            <tr>
          <td>{{brand.name}}</td>
          <td>{{brand.country}}</td>
          <td>0</td>
          <td><a href="#">See More</a></td>
        </tr>
        {{/each}}
        </tbody>
    </table>
      </div>
    </figure>
  </div>
</div>
